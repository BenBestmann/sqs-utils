{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "camelcase": ["error"],
        "eqeqeq": ["error", "smart"],
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
        "prefer-const": ["error", {"destructuring": "any"}],
        "strict": ["error", "safe"],
        "no-console": ["warn"]
    }
}